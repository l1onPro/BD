                    <TextBox Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left" Width="50" Height="20" IsReadOnly="True" IsEnabled="False">
                        <TextBox.Text>
                            <Binding Path="CurNum" UpdateSourceTrigger="PropertyChanged" NotifyOnValidationError="True">                                
                            </Binding>
                        </TextBox.Text>
                    </TextBox>

